<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" InitialTargets="SetVersion">
    <PropertyGroup>
        <SemVerMajor>0</SemVerMajor>
        <SemVerMinor>2</SemVerMinor>
        <SemVerPatch>1</SemVerPatch>
        <SemVerDashLabel>-pre</SemVerDashLabel>
    </PropertyGroup>

    <Target Name="SetVersion">
        <PropertyGroup>
            <Version>$(SemVerMajor).$(SemVerMinor).$(SemVerPatch)$(SemVerDashLabel)</Version>
            <PackageVersion>$(SemVerMajor).$(SemVerMinor).$(SemVerPatch)$(SemVerDashLabel)</PackageVersion>
        </PropertyGroup>
    </Target>
</Project>